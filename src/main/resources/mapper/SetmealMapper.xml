<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.canteen.mapper.SetmealMapper">
    <resultMap id="setmealMap" type="com.canteen.entity.Setmeal">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="price" column="price"/>
        <result property="description" column="description"/>
        <result property="vitaminType" column="vitamin_type"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <select id="selectById" resultMap="setmealMap">
        SELECT * FROM setmeal WHERE id = #{id}
    </select>

    <select id="selectAll" resultMap="setmealMap">
        SELECT * FROM setmeal ORDER BY create_time DESC
    </select>

    <select id="selectByConditions" resultMap="setmealMap">
        SELECT * FROM setmeal
        <where>
            <if test="suitableCrowd != null and suitableCrowd != ''">
                AND description LIKE CONCAT('%', #{suitableCrowd}, '%')
            </if>
            <if test="vitamin != null and vitamin != ''">
                AND vitamin_type LIKE CONCAT('%', #{vitamin}, '%')
            </if>
        </where>
        ORDER BY create_time DESC
    </select>
</mapper> 