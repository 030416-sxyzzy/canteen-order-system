<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.canteen.mapper.DishMapper">
    <!-- 结果映射：mybatis自动将数据库中的字段映射到实体类中的属性 -->
    <resultMap id="dishMap" type="com.canteen.entity.Dish">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="price" column="price"/>
        <result property="description" column="description"/>
        <result property="category" column="category"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <!-- 基本列 -->
    <sql id="Base_Column_List">
        id, name, price, description, category, status, create_time, update_time
    </sql>

    <!-- 插入菜品 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO dish (name, price, description, category, status, create_time, update_time)
        VALUES (#{name}, #{price}, #{description}, #{category}, #{status}, #{createTime}, #{updateTime})
    </insert>

    <!-- 删除菜品 -->
    <delete id="deleteById">
        DELETE FROM dish WHERE id = #{id}
    </delete>

    <!-- 更新菜品 -->
    <update id="update">
        UPDATE dish
        SET name = #{name},
            price = #{price},
            description = #{description},
            category = #{category},
            status = #{status},
            update_time = #{updateTime}
        WHERE id = #{id}
    </update>

    <!-- 根据ID查询菜品 -->
    <select id="selectById" resultMap="dishMap">
        SELECT * FROM dish WHERE id = #{id}
    </select>

    <!-- 查询所有菜品 -->
    <select id="selectAll" resultMap="dishMap">
        SELECT * FROM dish ORDER BY create_time DESC
    </select>

    <!-- 查询所有可用的菜品 -->
    <select id="selectAvailable" resultMap="dishMap">
        SELECT * FROM dish WHERE status = 1 ORDER BY create_time DESC
    </select>

    <!-- 根据分类查询可用的菜品 -->
    <select id="selectAvailableByCategory" resultMap="dishMap">
        SELECT * FROM dish WHERE status = 1 AND category = #{category} ORDER BY create_time DESC
    </select>

    <!-- 根据分类查询菜品 -->
    <select id="selectByCategory" resultMap="dishMap">
        SELECT <include refid="Base_Column_List"/>
        FROM dish
        WHERE category = #{category}
    </select>

    
    <!-- 更新指定菜品状态 -->
    <update id="updateStatus">
        UPDATE dish SET status = #{status} WHERE id = #{id}
    </update>
</mapper> 